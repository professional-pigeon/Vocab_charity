 <h4>Definition to edit: <%= @definition.meaning %></h4>    
    
<form action="/definition/<%= @definition.id %>/update" method="post">
  <div class="form-group">
    <input name="_method" type="hidden" value="patch">
    <label for="new_def">Change Definition</label>
    <input id="n" name="new_def" class="form-control" type="text">
  </div>
  <button type="submit" class="btn-primary">Update Definition</button>
</form>

<form action="/definition/<%= @definition.id %>/delete" method="post">
  <input name="method" type="hidden" value="delete">
  <button type="submit" class="btn-primary">Delete Definition</button>
</form>

<a href="/word/<%= @definition.word_id %>">Go back</a>