<h1>Word Space</h1>

<div class="row">
  <div class="col">
    <h3>Here are some words your classmates have added!</h3>

    <% if @words.any? %>
      <ul>
          <% @words.each do |word_individual| %>
        <li><a href="/word/<%= word_individual.id %>"><%= word_individual.word %></a></li>
      <% end %>
      </ul>
    <% else %>
      <p>There are no words yet, but you can be the first!<p>
    <% end %>
  </div>
  <div class="col"> 
    <h1>Add a word</h1>

    <form action="/words" method="post">
      <div class="form-group">
        <label for="word_name">Type the word in here</label>
        <input id="n" name="word_name" class="form-control" type="text">
      </div>
      <button type="submit" class="btn-primary">Add Your Word</button>
    </form>
  </div>
</div>